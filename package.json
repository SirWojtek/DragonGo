{
  "name": "dragon-go",
  "version": "1.0.0",
  "repository": "git@github.com:SirWojtek/DragonGo.git",
  "author": "SirWojtek",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "(cd backend && yarn start:dev) & (cd frontend && yarn start)"
  },
  "lint-staged": {
    "*.tsx": [
      "tslint --fix",
      "prettier",
      "git add"
    ],
    "*.ts": [
      "tslint --fix",
      "prettier",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1"
  },
  "dependencies": {
    "class-validator": "^0.10.2"
  }
}
